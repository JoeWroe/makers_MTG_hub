<%= bootstrap_form_for @event do |f| %>
  <%= f.text_field :name %>
  <%= f.select(:game_format, Event::GAME_FORMATS) %>
  <%= f.text_area :description %>
  <%= f.number_field :cost %>
  <%= f.number_field :min_size %>
  <%= f.number_field :max_size %>
  <%= f.datetime_select(:start_time) %>
  <%= f.submit %>
<% end %>
